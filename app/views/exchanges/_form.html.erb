
<%= form_with(model: @currency, url: "exchanges/new", method: :get)  do |form| %>
 
    <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, style: "display: block" %>
  </div>

  <div>
    <%= form.label :from, style: "display: block" %>
    <%= form.select  :from,collection: Currency::FROM %>
  </div>

    <div>
    <%= form.label :to, style: "display: block" %>
    <%= form.select  :to,collection: Currency::TO %>
  </div>

    <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.text_field :date, style: "display: block" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>